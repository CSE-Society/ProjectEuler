public class EvenFibonacciSequence {
   
   public static void main(String[] args) {
      
      int sum = 0;
      int a = 1;
      int b = 1;
      int c = 2;
      
      while (c < 4000000) {
         a = b;
         b = c;
         c = a+b;
         
         if (c % 2 == 0) {
            sum += c;
         }
      }
      
      System.out.println(sum);
      
   }
}
